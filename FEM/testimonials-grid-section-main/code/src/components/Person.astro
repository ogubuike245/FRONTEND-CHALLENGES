---
const { person } = Astro.props;
---

<article id={person.id}>
    <div class="info">
        <div class="avatar">
            <img src={person.avatar} alt="" />
        </div>
        <div class="person-info">
            <h3 class="name">{person.name}</h3>
            <span class="position">
                {person.status}
            </span>
        </div>
    </div>

    <div class="desc-big">
        <h3>{person.desc.big}</h3>
    </div>

    <div class="desc-small">
        <p>"{person.desc.small}"</p>
    </div>
</article>

<style>
    article {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
        background-color: var(--White);

        border-radius: 0.5rem;
    }

    article .info {
        display: flex;
        align-items: center;
    }

    article .info .avatar img {
        border-radius: 50%;
        border: 3px solid var(--LightGray);

        height: 70%;
        width: 70%;
        object-fit: cover;
    }

    .name {
        color: var(--LightGray);
    }
    .position {
        color: var(--LightGray);
        opacity: 0.5;
    }

    .desc-big h3 {
        color: var(--White);
        font-size: 20px;
    }

    .desc-small p {
        color: var(--LightGray);
        opacity: 0.7;
        line-height: 1.5;
        font-size: 13px;
    }
    #daniel {
        grid-column: span 2;
        grid-row: span 1;

        background-color: var(--ModerateViolet);
    }

    #jonathan {
        grid-column: span 1;
        grid-row: span 1;
        background-color: var(--VeryDarkGrayishBlue);
    }

    #kira {
        grid-column: span 1;
        grid-row: span 2;
    }

    #jeanette {
        grid-column: span 1;
        grid-row: span 1;
    }

    #kira .name,
    #jeanette .name {
        color: var(--VeryDarkBlackishBlue);
    }
    #kira .position,
    #jeanette .position {
        color: var(--VeryDarkBlackishBlue);
        opacity: 0.5;
    }

    #kira .desc-big h3,
    #jeanette .desc-big h3 {
        color: var(--VeryDarkBlackishBlue);
        font-size: 20px;
    }

    #kira .desc-small p,
    #jeanette .desc-small p {
        color: var(--VeryDarkBlackishBlue);
        opacity: 0.7;
        font-size: 13px;
    }

    #patrick {
        grid-column: span 2;
        grid-row: span 1;
        background-color: var(--VeryDarkBlackishBlue);
    }

    @media (max-width: 768px) {
        #daniel {
            grid-column: span 1;
            grid-row: span 1;
        }

        #jonathan {
            grid-column: span 1;
            grid-row: span 1;
        }

        #kira {
            grid-column: span 1;
            grid-row: span 1;
        }

        #jeanette {
            grid-column: span 1;
            grid-row: span 1;
        }

        #patrick {
            grid-column: span 1;
            grid-row: span 1;
        }
    }
</style>
