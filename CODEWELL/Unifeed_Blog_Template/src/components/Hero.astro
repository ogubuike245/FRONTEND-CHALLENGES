---
const { name, position, avatar, title, description, coverImage, className } =
  Astro.props;
---

<section class="hero">
  <article class="post-cover-image">
    <img src={coverImage} alt={title} />
  </article>
  <article class="post-content">
    <div class="post-title">
      <h2>
        {title}
      </h2>
    </div>
    <div class="post-description">
      <p>
        {description}
      </p>
    </div>
    <div class="user-info">
      <div class="avatar">
        <img src={avatar} alt="" />
      </div>
      <div class="details">
        <span class="name">{name}</span>
        <span class="position">{position}</span>
      </div>
    </div>
  </article>
</section>

<!-- STYLES  -->
<style>
  .hero {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1rem;
  }

  h2 {
    color: var(--Black);
  }

  p {
    color: var(--Grey);
  }

  .name {
    color: var(--Black);
    font-weight: 800;
  }

  .position {
    color: var(--Grey);
  }
  .card {
  }

  article {
  }

  .post-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .avatar {
    width: 50px;
    height: 50px;
  }

  .details {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  @media (min-width: 868px) {
    .hero {
      grid-template-rows: 320px;
    }
    .post-content {
      gap: 1.5rem;
      justify-content: center;
    }

    h2 {
      font-size: 32px;
    }

    p {
      font-size: 22px;
    }

    .name {
      color: var(--Black);
      font-weight: 800;
    }

    .position {
      color: var(--Grey);
    }
  }
</style>
