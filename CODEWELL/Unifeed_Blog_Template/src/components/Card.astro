---
const { name, position, avatar, title, description, coverImage, className } =
  Astro.props;
---

<div class="card">
  <article class="post-cover-image">
    <img src={coverImage} alt={title} />
  </article>
  <article class="post-content">
    <div class="post-title">
      <h2>
        {title}
      </h2>
    </div>
    <div class="post-description">
      <p>
        {description}
      </p>
    </div>
    <div class="user-info">
      <div class="avatar">
        <img src={avatar} alt="" />
      </div>
      <div class="details">
        <span class="name">{name}</span>
        <span class="position">{position}</span>
      </div>
    </div>
  </article>
</div>

<!-- STYLES  -->
<style>
  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .card {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  article {
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .avatar {
    width: 50px;
    height: 50px;
  }

  .details {
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  h2 {
    color: var(--Black);
  }

  p {
    color: var(--Grey);
  }

  .name {
    color: var(--Black);
    font-weight: 800;
  }

  .position {
    color: var(--Grey);
  }
</style>
